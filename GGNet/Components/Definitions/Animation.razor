@using System.Globalization

<defs>
    <style type="text/css">
        #@(Id) .animate-point {
            transition: transform @(Theme.Animation.Point.Transition.ToString(CultureInfo.InvariantCulture))s ease-in-out;
        }
            #@(Id) .animate-point:hover {
                transform: scale(@(Theme.Animation.Point.Scale.ToString(CultureInfo.InvariantCulture)));
            }

        #@(Id) .animate-bar {
            transition: transform @(Theme.Animation.Bar.Transition.ToString(CultureInfo.InvariantCulture))s ease-in-out;
            fill-opacity: 0.6 !important;
        }
            #@(Id) .animate-bar:hover {
                fill-opacity: 1 !important;
            }

        #@(Id) .animate-map {
            transition: transform @(Theme.Animation.Map.Transition.ToString(CultureInfo.InvariantCulture))s ease-in-out;
            fill-opacity: 0.6 !important;
            stroke-width: 0.2 !important;
        }
            #@(Id) .animate-map:hover {
                fill-opacity: 1 !important;
                stroke-width: 0.5 !important;
            }

        #@(Id) .animate-hex {
            transition: transform @(Theme.Animation.Hex.Transition.ToString(CultureInfo.InvariantCulture))s ease-in-out;
            fill-opacity: 0.7 !important;
        }
            #@(Id) .animate-hex:hover {
                fill-opacity: 1 !important;
            }
    </style>
</defs>
