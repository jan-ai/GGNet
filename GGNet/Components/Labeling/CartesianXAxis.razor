@using System.Globalization

@inherits AxisBase

@foreach (var (value, label) in Axis.Labels)
{
    if (value < 0 || value > 1)
        continue;

    var x = Area.CoordX(value);

    <g clip-path="url(#@ClipId)">
        <text style="transform: translate(@x.ToString(CultureInfo.InvariantCulture)px, @zone.Y.ToString(CultureInfo.InvariantCulture)px) rotate(@Theme.Axis.Text.X.Angle.ToString(CultureInfo.InvariantCulture)deg);"
              class="axisTextX">@label</text>
    </g>
}

@foreach (var (value, title) in Axis.Titles)
{
    if (value < 0 || value > 1)
        continue;

    var x = Area.CoordX(value);

    <g clip-path="url(#@ClipId)">
        <text style="transform: translate(@x.ToString(CultureInfo.InvariantCulture)px, @zoneTitle.Y.ToString(CultureInfo.InvariantCulture)px) rotate(@Theme.Axis.Text.X.Angle.ToString(CultureInfo.InvariantCulture)deg);"
              class="axisTextX">@title</text>
    </g>
}

@if (!string.IsNullOrEmpty(Axis.AxisLabel))
{
    <g clip-path="url(#@ClipId)">
        <text x=@zoneLabel.X.ToString(CultureInfo.InvariantCulture)
              y=@zoneLabel.Y.ToString(CultureInfo.InvariantCulture)
              class="axisTitleX">@Axis.AxisLabel</text>
    </g>
}


